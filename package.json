{
  "name": "my-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "tsc -p electron/tsconfig.json",
    "dev:start": "concurrently \"npm run dev\" \"npm run dev:electron && cross-env NODE_ENV=development electron dist-electron/main.js\"",
    "build": "vite build && tsc -p tsconfig.json",
    "start": "npm run build && cross-env NODE_ENV=production electron dist-electron/main.js",
    "lint": "eslint src --ext ts,tsx --fix"
  },
  "main": "dist-electron/main.js",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/glob": "^8.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "minimatch": "^5.1.6",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
